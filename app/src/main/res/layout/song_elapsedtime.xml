<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title2"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:ellipsize="end"
        android:layout_marginBottom="30dp"
        android:maxLines="1"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="21sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <io.hefuyi.listener.widget.timely.TimelyView
            android:id="@+id/timelyView11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="17sp"
            app:text_color="#ffffff" />

        <TextView
            android:id="@+id/hour_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <io.hefuyi.listener.widget.timely.TimelyView
            android:id="@+id/timelyView12"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="17sp"
            app:text_color="#ffffff" />

        <io.hefuyi.listener.widget.timely.TimelyView
            android:id="@+id/timelyView13"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="17sp"
            app:text_color="#ffffff" />

        <TextView
            android:id="@+id/minute_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <io.hefuyi.listener.widget.timely.TimelyView
            android:id="@+id/timelyView14"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="17sp"
            app:text_color="#ffffff" />

        <io.hefuyi.listener.widget.timely.TimelyView
            android:id="@+id/timelyView15"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="17sp"
            app:text_color="#ffffff" />

    </LinearLayout>



</LinearLayout>